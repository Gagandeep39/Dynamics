<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentCustomer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentCustomer">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16sp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button"
                android:layout_width="0sp"
                android:layout_height="120sp"
                android:layout_columnWeight="1"
                android:layout_margin="16sp"
                android:layout_rowWeight="1"
                android:background="@color/colorAccent"
                android:padding="16sp"
                android:text="View New Customer" />

            <Button
                android:id="@+id/buttonComplaint"
                android:layout_width="0sp"
                android:layout_height="120sp"
                android:layout_columnWeight="1"
                android:layout_margin="16sp"
                android:layout_rowWeight="1"
                android:background="@color/colorAccent"
                android:padding="16sp"
                android:text="Raise New Complaint" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0sp"
                android:layout_height="120sp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="16sp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:background="@color/colorAccent"
                android:text="View Complaints" />

            <Button
                android:id="@+id/button4"
                android:layout_width="0sp"
                android:layout_height="120sp"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="16sp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:background="@color/colorAccent"
                android:text="Complaints Status" />


        </GridLayout>

    </LinearLayout>

</FrameLayout>