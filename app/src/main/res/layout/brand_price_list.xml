<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8sp"
    android:elevation="8sp"
    app:cardCornerRadius="@dimen/padding_medium">

    <LinearLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/padding_standard">

        <LinearLayout
            android:id="@+id/linearLayoutData1"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brand : " />

            <TextView
                android:id="@+id/textViewProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product : " />

            <TextView
                android:id="@+id/textViewRemark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remark : " />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutData2"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewWSP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WSP : " />

            <TextView
                android:id="@+id/textViewRSP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RSP : " />

            <TextView
                android:id="@+id/textViewStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock : " />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>