<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8sp"
    android:elevation="8sp"
    app:cardCornerRadius="@dimen/padding_small">


        <LinearLayout
            android:layout_width="match_parent"
            android:background="?attr/selectableItemBackground"
            android:id="@+id/linearLayoutData1"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:text="Brand"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewBrand"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:text="Product"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewProduct"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:text="WSP"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewWSP"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:text="RSP"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/textViewRSP"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:text="Stock"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewStock"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:text="Remark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewRemark"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7" />


                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="4sp"
                android:background="@color/colorAccent" />
        </LinearLayout>


</android.support.v7.widget.CardView>