<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".market.InsertGeneralMarketActivity"
    tools:showIn="@layout/activity_insert_general_market">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Customer" />

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner

                android:id="@+id/searchCategoryBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintText="Default" />
        </LinearLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutRepresentative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:backgroundTint="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayoutCategory"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textInputLayoutCategory"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCategory">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditRepresentative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User ID"
                android:inputType="number"
                android:maxLength="4" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutCounter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayoutCategory"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textInputLayoutCategory"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCategory">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditCounter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Counter" />


        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutMSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayoutCategory"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textInputLayoutCategory"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCategory">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditMSP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Major Selling Products" />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayoutCategory"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textInputLayoutCategory"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCategory">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Price"
                android:inputType="numberDecimal" />


        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayoutCategory"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textInputLayoutCategory"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCategory">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editTextDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:hint="Market Details"
                android:minLines="2" />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutDemand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayoutCategory"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textInputLayoutCategory"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCategory">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editTextDemand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:hint="Demand and Other Info"
                android:minLines="2" />


        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>