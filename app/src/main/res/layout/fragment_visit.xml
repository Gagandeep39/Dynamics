<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FragmentVisit">


    <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="0sp"
                android:layout_height="120sp"
                android:layout_margin="16sp"
                android:background="@color/colorAccent"
                android:padding="16sp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="8sp"
                app:cardElevation="8sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_row="0"
                app:layout_rowWeight="1">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8sp"
                        android:text="Visit Overview"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="8sp"
                        app:layout_constraintBottom_toTopOf="@+id/textView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_jcp_calendar" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="0sp"
                android:layout_height="120sp"
                android:layout_margin="16sp"
                android:background="@color/colorAccent"
                android:padding="16sp"
                android:text="View Visits"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="8sp"
                app:cardElevation="8sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_row="0"
                app:layout_rowWeight="1">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8sp"
                        android:text="Today's Visit"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="8sp"
                        app:layout_constraintBottom_toTopOf="@+id/textView2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_view_jcp" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="0sp"
                android:layout_height="120sp"
                android:layout_margin="16sp"
                android:background="@color/colorAccent"
                android:padding="16sp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="8sp"
                app:cardElevation="8sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_row="1"
                app:layout_rowWeight="1">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8sp"
                        android:text="Create JCP"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="8sp"
                        app:layout_constraintBottom_toTopOf="@+id/textView3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_visit_log" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>


    </android.support.v7.widget.GridLayout>


</FrameLayout>